<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">
  <ActionBar class="app-bar" flat="true">
    <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="onBack" />
    <Label text="Match Detail" class="action-bar-title" />
  </ActionBar>

  <ScrollView>
    <StackLayout class="match-detail" spacing="18">
      <Label class="match-detail-result" text="{{ resultLabel }}" />
      <Label class="match-detail-summary" text="{{ summaryLabel }}" textWrap="true" />
      <Label class="match-detail-date" text="{{ dateLabel }}" textWrap="true" />

      <StackLayout class="match-detail-section" spacing="8">
        <Label class="match-detail-text" text="{{ opponentLabel }}" textWrap="true" />
        <Label class="match-detail-text" text="{{ setupLabel }}" textWrap="true" />
        <Label class="match-detail-text" text="{{ variantsLabel }}" textWrap="true" />
        <Label class="match-detail-text" text="{{ powersLabel }}" textWrap="true" />
        <Label class="match-detail-text" text="{{ movesLabel }}" />
        <Label class="match-detail-text"
               text="{{ winningLineLabel }}"
               textWrap="true"
               visibility="{{ winningLineVisible ? 'visible' : 'collapse' }}" />
      </StackLayout>

      <StackLayout class="match-detail-actions" spacing="12">
        <Button class="match-detail-primary"
                text="Watch replay"
                tap="onWatchReplay"
                isEnabled="{{ hasReplay }}" />
        <Button class="match-detail-primary" text="Start match again" tap="onStartAgain" />
        <Button class="match-detail-danger" text="Delete match" tap="onDeleteMatch" />
      </StackLayout>
    </StackLayout>
  </ScrollView>
</Page>
