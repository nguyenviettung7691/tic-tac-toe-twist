{
  "name": "tic-tac-toe-twist",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "build:engine": "npm --workspace packages/engine run build",
    "dev:ai": "npm --workspace services/ai run dev",
    "build:ai": "npm --workspace services/ai run build",
    "mobile:android": "node scripts/ns-mobile-run.js",
    "debug:android": "npx nativescript@latest debug android --emulator --path apps/mobile",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "patch-package": "^8.0.1"
  }
}
